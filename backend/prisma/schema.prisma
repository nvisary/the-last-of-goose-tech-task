generator client {
  provider = "prisma-client"
  output   = "../src/lib/prisma" // Changed output path to fit archetecture.md
}

datasource db {
  provider = "postgresql"

}

enum UserRole {
  ADMIN
  SURVIVOR
  NIKITA
}

enum RoundStatus {
  COOLDOWN
  ACTIVE
  FINISHED
}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String
  role     UserRole
  rounds   UserRound[]
}

model Round {
  id          String      @id @default(uuid())
  startTime   DateTime
  endTime     DateTime
  status      RoundStatus @default(COOLDOWN)
  totalScore  Int         @default(0)
  users       UserRound[]
}

model UserRound {
  userId  String
  roundId String
  taps    Int     @default(0)
  score   Int     @default(0)

  user  User  @relation(fields: [userId], references: [id])
  round Round @relation(fields: [roundId], references: [id])

  @@id([userId, roundId])
}